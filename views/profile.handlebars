<div class="row">
  <div class="col-auto">
    <h3>Welcome, {{name}}!</h3>
  </div>
</div>

<div class="container">
  <div class="review-card">
    <div class="row mt-4">
      <div class="col-md-6">
        <h4>New Restaurant Entry</h4>

        <form class="form new-restaurant-form">
          <div class="form-group">
            <label for="restaurant-name">Restaurant name:</label>
            <input class="form-input" type="text" id="restaurant-name" name="restaurant-name" />
          </div>
          <div class="form-group">
            <label for="pricing-tier">Pricing tier ($):</label>
            <input class="form-input" type="number" min="1" max="5" id="pricing-tier" name="pricing-tier" />
          </div>
          <div class="form-group">
            <label for="dish-desc">Dish description:</label>
            <textarea class="form-input" id="dish-desc" name="dish-desc"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
          </div>
        </form>
      </div>

      {{#if restaurants.length}}
      <div class="col-md-6 restaurant-list">
        <h3>Favorite Restaurants:</h3>

        {{#each restaurants as |restaurant|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/restaurant/{{restaurant.id}}" id="profile-restaurant">{{restaurant.name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{restaurant.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
   </div> 
</div>

<script src="./js/profile.js"></script>
